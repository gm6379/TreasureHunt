<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="georgemcdonnell.com.treasurehunt.hunts.AddReachedLocationFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Reached Location"
        android:id="@+id/reached_location_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You must answer this question before you can reach the location:"
        android:id="@+id/add_reached_location_description_text_view"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reached_location_title"
        android:layout_alignLeft="@+id/reached_location_title"
        android:layout_alignStart="@+id/reached_location_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/question_text_view"
        android:layout_below="@+id/add_reached_location_description_text_view"
        android:layout_alignLeft="@+id/add_reached_location_description_text_view"
        android:layout_alignStart="@+id/add_reached_location_description_text_view"
        android:layout_marginTop="34dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Enter your answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reached_location_answer_field"
        android:layout_below="@+id/question_text_view"
        android:layout_alignLeft="@+id/question_text_view"
        android:layout_alignStart="@+id/question_text_view"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/question_text_view"
        android:layout_alignEnd="@+id/question_text_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Answer"
        android:id="@+id/submit_reached_location_button"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/reached_location_answer_field"
        android:layout_alignLeft="@+id/reached_location_answer_field"
        android:layout_alignStart="@+id/reached_location_answer_field"
        android:layout_alignRight="@+id/reached_location_answer_field"
        android:layout_alignEnd="@+id/reached_location_answer_field" />

</RelativeLayout>
